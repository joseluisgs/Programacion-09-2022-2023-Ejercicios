<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.sergiosf.concesionario.controllers.DetalleViewController">
    <children>
        <Label layoutX="18.0" layoutY="25.0" text="Ficha Vehiculo" AnchorPane.leftAnchor="18.0" AnchorPane.topAnchor="25.0">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <ImageView fx:id="imageVehiculo" fitHeight="94.0" fitWidth="141.0" layoutX="199.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="14.0">
            <image>
                <Image url="@../images/sin-imagen.jpg" />
            </image>
            <cursor>
                <Cursor fx:constant="OPEN_HAND" />
            </cursor>
        </ImageView>
        <GridPane layoutX="18.0" layoutY="131.0" prefHeight="197.0" prefWidth="320.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="136.0" minWidth="10.0" prefWidth="116.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="226.0" minWidth="10.0" prefWidth="204.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Id:" />
                <Label text="Modelo:" GridPane.rowIndex="2" />
                <Label text="Tipo Vehiculo:" GridPane.rowIndex="4" />
                <TextField fx:id="textVehiculoId" editable="false" prefHeight="26.0" prefWidth="156.0" GridPane.columnIndex="1" />
                <TextField fx:id="textVehiculoModelo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Facha Matriculacion:" GridPane.rowIndex="5" />
                <DatePicker fx:id="dateVehiculoFech" prefHeight="25.0" prefWidth="261.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Marca:" GridPane.rowIndex="1" />
                <TextField fx:id="textVehiculoMarca" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="comboTipoVehiculo" prefHeight="25.0" prefWidth="208.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Matricula:" GridPane.rowIndex="3" />
            <TextField fx:id="textVehiculoMatricula" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" layoutX="15.0" layoutY="358.0" prefHeight="46.0" prefWidth="294.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <Button fx:id="btnGuardar" mnemonicParsing="false" text="Guardar" HBox.hgrow="SOMETIMES">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/save.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnLimpiar" mnemonicParsing="false" text="Limpiar">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/clean.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnCancelar" mnemonicParsing="false" text="Cancelar">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/close.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
